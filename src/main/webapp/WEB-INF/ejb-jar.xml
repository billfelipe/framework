<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd"
	version="3.0">
	<interceptors>
		<interceptor>
			<interceptor-class>com.billfelipe.glasgow.framework.LogInterceptor</interceptor-class>
			<around-invoke>
				<method-name>interceptor</method-name>
			</around-invoke>
		</interceptor>
	</interceptors>
	<assembly-descriptor>
		<interceptor-binding>
			<ejb-name>*</ejb-name>
			<interceptor-class>com.billfelipe.glasgow.framework.LogInterceptor</interceptor-class>
		</interceptor-binding>
	</assembly-descriptor>

</ejb-jar>